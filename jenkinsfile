pipeline {
    agent any

    tools {
        jdk 'jdk17'       // name must match Jenkins tool config
        maven 'Maven-3.9.11'    // name must match Jenkins tool config
    }

    parameters {
        choice(name: 'ENV', choices: ['QA', 'DEV', 'UAT'], description: 'Select Environment')
        choice(name: 'BROWSER', choices: ['chrome', 'firefox'], description: 'Select Browser')
    }

    stages {

        stage('Checkout Code') {
            steps {
                //git branch: 'main',
                  //  url: 'https://github.com/your-repo/your-project.git'
                   echo 'Checking out project from GitHub...'
                checkout scm
            }
        }

        stage('Build & Run Tests') {
            steps {
                bat """
                mvn clean test ^
                -Denv=${params.ENV} ^
                -Dbrowser=${params.BROWSER}
                """
            }
        }
    }

    post {
        always {
			
			// Publish TestNG / Surefire results in jenkins UI
      		junit 'target/surefire-reports/*.xml'
			
			//Archieve reports in jenkins, copy from workspace and store it in jenkins build
            archiveArtifacts artifacts: 'reports/**', allowEmptyArchive: true
            archiveArtifacts artifacts: 'target/surefire-reports/**', allowEmptyArchive: true
        }
        
        //Email congifuration
         success {
        emailext (
            subject: "SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
            body: """
                <h3>Build SUCCESS</h3>
                <p>Job: ${env.JOB_NAME}</p>
                <p>Build: ${env.BUILD_NUMBER}</p>
                <p>URL: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
            """,
            mimeType: 'text/html',
            to: 'rangaraj.qa@gmail.com'
        )
    }

    failure {
        emailext (
            subject: "FAILURE: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
            body: """
                <h3>Build FAILED</h3>
                <p>Job: ${env.JOB_NAME}</p>
                <p>Build: ${env.BUILD_NUMBER}</p>
                <p>URL: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
            """,
            mimeType: 'text/html',
            to: 'rangaraj.qa@gmail.com'
        )
    }
        
    }
}
